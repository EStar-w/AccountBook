<?xml version="1.0" encoding="utf-8"?>
<!--用侧滑菜单就需要用DrawerLayout作为根布局-->
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerlayout">

    <!--第一个子View用于显示底部内容-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:orientation="vertical"
            android:background="#FF9900">
            <Button
                android:id="@+id/show_list"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:background="@drawable/ic_dehaze_black_24dp"
                android:layout_weight="0.7"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.7"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="35sp"
                android:gravity="center"
                android:text="净资产:$19,140.94"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="总资产:25，243.72"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="负资产:6，102.75"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </LinearLayout>
    </LinearLayout>

    <!--第二个子View编写侧滑菜单的内容-->
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:layout_gravity="start"
        android:orientation="vertical"> <!--start表示一开始不显示，从左侧滑出才显示-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/head_icon"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="登录"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/line_block"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="注册"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/line_block"/>
        </LinearLayout>
        <ListView
            android:id="@+id/list_view_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
